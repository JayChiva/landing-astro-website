---
import webInfo from '../data/web-info.json';
---

<header class='py-3 px-4'>
  <div class='w-auto flex justify-between items-center'>
    <h1 class='font-bold'>{webInfo.name}</h1>
    <nav class='hidden sm:flex sm:gap-5'>
      {
        webInfo.navLinks.map((item) => (
          <a
            href={item.url}
            class='hover:text-purple-600 hover:underline hover:underline-offset-8'
          >
            {item.label}
          </a>
        ))
      }
    </nav>
    <button
      class='rounded-sm py-2 px-3 flex justify-center items-center hover:bg-purple-800 hover:text-white'
      >Sign up</button
    >
  </div>
</header>
